  <div class="container-contacto">
  

  <form action="payments" id="form" method="post">
    <h2>Pagar</h2>
    <br>

    <label for="full-name">Nombre completo</label>
    <input type="text" placeholder="Nombre" name="full-name" value="" required>

    <br>
    
    <label for="card-number">Numero de tarjeta</label>
    <input type="text" placeholder="tarjeta" name="card-number" value="" required>

    <br>

    <label for="expiration-month">Mes de expiracion</label>
    <input type="text" placeholder="Mes" name="expiration-month" value="" required>

    <br>
   
    <label for="expiration-year">Año de expiracion</label>
    <input type="text" placeholder="Año" name="expiration-year" value="" required>

    <br>
    
    <label for="cvv">Cedula</label>
    <input type="text" placeholder="Cedula" name="cvv" value="" required>

    <br>

    <label for="amount">Monto a Pagar</label>
    <input type="text" placeholder="Monto" name="amount" value="" required>
   
    <br>
    <label for="currency">Indique la moneda</label>
    <input type="text" placeholder="moneda" name="currency" value="" required>

    <br>

    <label for="description">Descripcion</label>
    <input type="text" placeholder="descripcion" name="description" value="" required>

    <br>
    <input type="submit" id="button-contacto" value="Pagar" class="button">
  </form>

